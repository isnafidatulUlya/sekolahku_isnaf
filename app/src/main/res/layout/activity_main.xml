<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#2D6E68">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="5dp"
                android:layout_height="74dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/smk" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="SMK SYAFI'I AKROM KOTA PEKALONGAN"
                android:textColor="#272323"
                android:textSize="18sp" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="match_parent"
        android:layout_height="667dp"
        android:layout_marginTop="150dp"
        android:background="#5B918C"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#BFD8D6"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="224dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/gallery" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_margin="5dp"
                            android:background="#00FFFFFF"
                            android:text="Gallery"
                            android:textColor="#2C2828"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#BFD8D6"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="153dp"
                            android:layout_height="114dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/schedule" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_margin="5dp"
                            android:text="Jadwal"
                            android:textColor="#101010"
                            android:textSize="20sp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#BFD8D6"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="129dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/kejuruan" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_margin="5dp"
                            android:text="Info Kejuruan"
                            android:textColor="#131313"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#BFD8D6"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="135dp"
                            android:layout_height="111dp"
                            android:layout_gravity="center|top"
                            app:srcCompat="@drawable/pendaftaran" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_margin="5dp"
                            android:text="PPDB"
                            android:textColor="#151414"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#BFD8D6"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="123dp"
                            android:layout_height="114dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/data_guru" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_margin="5dp"
                            android:text="Data Guru"
                            android:textColor="#090808"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#BFD8D6"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="131dp"
                            android:layout_height="99dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/berita_smk" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_margin="5dp"
                            android:text="Berita SMK"
                            android:textColor="#232121"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>