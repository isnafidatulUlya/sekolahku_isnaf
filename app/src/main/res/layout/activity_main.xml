<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:background="#2D6E68">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:srcCompat="@drawable/unnamed" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="120dp"
            android:text="SMK SYAFI'I AKROM"
            android:textColor="#272323"
            android:textSize="16sp" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="192dp"
        android:background="#6E9E99"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="224dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/gallery" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_margin="5dp"
                            android:background="#FFFFFF"
                            android:text="Gallery"
                            android:textColor="#2C2828"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="168dp"
                            android:layout_height="124dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/schedule" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_margin="5dp"
                            android:text="Jadwal"
                            android:textColor="#101010"
                            android:textSize="20sp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="162dp"
                            android:layout_height="121dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/running" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:text="Aktifitas"
                            android:textColor="#131313"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="173dp"
                            android:layout_height="109dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/map" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_margin="5dp"
                            android:text="Lokasi SMK"
                            android:textColor="#151414"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>